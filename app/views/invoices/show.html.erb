<%= render :partial => 'invoice_data', :object => @invoice %>

<%= link_to edit_image_tag(:large), edit_invoice_path(@invoice) %>
<%= link_to back_image_tag(:large), invoices_path %>
<%= link_to pdf_image_tag(:large), invoice_url(@invoice, :format => 'pdf') %>

<% if @invoice.work_items.size > 0 -%>
<%= render :partial => 'work_items/work_item_list', :object => @invoice.work_items %>
<% end -%>

<% if @invoice.transactions.size > 0 -%>
<%= render :partial => 'transactions/transaction_list', :object => @invoice.rev_sorted_transactions %>
<% end -%>
