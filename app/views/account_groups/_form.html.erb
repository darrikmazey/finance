<% if @user_options.account_group %>
  <%= "#{@user_options.account_group.description || @user_options.account_group.name}" %>
  <% if @current_user.account_groups.length > 1 %>
    <% form_for(@user_options, :url => '/') do |f| %>
      <%= f.collection_select :account_group_id, @current_user.account_groups, :id, :name %>
      <%= f.submit "Change Account Group" %>
    <% end %>
  <% end %>
<% else %>
  Not part of any account groups!
<% end %>
