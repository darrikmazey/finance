<div class="item_data client">
	<div class="heading"><%= client_data.class.name.titleize %> : <%= client_data.name %></div>

	<div class="content">
		<div class="column first">
			<div class="field name">
				<div class="field_name">Name:</div>
				<div class="field_value"><%=h client_data.name %></div>
			</div>

			<div class="field account">
				<div class="field_name">Account:</div>
				<div class="field_value"><%= link_to client_data.account.name, account_url(client_data.account) rescue 'none'%></div>
			</div>
		</div>
		<div class="column">
			<div class="field billing_contact">
				<div class="field_name">Billing Contact:</div>
				<div class="field_value"><%=h client_data.contact_name %></div>
			</div>
			<div class="field contact_street1">
				<div class="field_name">&nbsp;</div>
				<div class="field_value"><%=h client_data.contact_street1 %></div>
			</div>
			<% if !client_data.contact_street2.blank? -%>
			<div class="field contact_street2">
				<div class="field_name">&nbsp;</div>
				<div class="field_value"><%=h client_data.contact_street2 %></div>
			</div>
			<% end -%>
			<div class="field contact_city_state_zip">
				<div class="field_name">&nbsp;</div>
				<div class="field_value"><%=h client_data.city_state_zip %></div>
			</div>
		</div>
	</div>
</div>
