<h1>New account</h1>

<% form_for(@account) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
	<p>
		<%= f.label :account_number %><br />
		<%= f.text_field :account_number %>
	</p>
  <p>
    <%= f.label :initial_balance %><br />
    <%= f.text_field :initial_balance %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.collection_select :type, Account::AccountType.all, :class_name, :to_s %>
  </p>
	<p>
		<%= f.label :amount %><br />
		<%= f.text_field :amount %>
	</p>
	<%= f.hidden_field :user_id, :value => @current_user.id %>
  <p>
    <%= f.label :due_date %><br />
    <%= f.date_select :due_date %>
  </p>
  <p>
    <%= f.label :period %><br />
    <%= f.collection_select :period, Account::Period.all, :period, :name %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', accounts_path %>
