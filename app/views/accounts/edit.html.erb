<h1>Editing account</h1>

<% form_for(@account) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :parent %><br />
    <%= f.collection_select :parent_id, @parents, :id, :name, :include_blank => true %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :initial_balance %><br />
    <%= f.text_field :initial_balance %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.collection_select :type, Account.types, :class_name, :display_name %>
  </p>
	<%= f.hidden_field :user_id, :value => @current_user.id %>
  <p>
    <%= f.label :due_date %><br />
    <%= f.date_select :due_date %>
  </p>
  <p>
    <%= f.label :period %><br />
    <%= f.collection_select :period, Period.all, :value, :name %>
  </p>
  <p>
    <%= f.label :account_number %><br />
    <%= f.text_field :account_number %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @account %> |
<%= link_to 'Back', accounts_path %>
