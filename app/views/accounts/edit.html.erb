<h1>Editing <%= @account.type.to_s.titleize.downcase %></h1>

<% form_for(@account) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :initial_balance %><br />
    <%= f.text_field :initial_balance %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= @account.type.to_s.titleize %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= @account.user.username %>
  </p>
  <p>
    <%= f.label :due_date %><br />
    <%= f.date_select :due_date %>
  </p>
  <p>
    <%= f.label :period %><br />
    <%= f.text_field :period %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @account %> |
<%= link_to 'Back', accounts_path %>
