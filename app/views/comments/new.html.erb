<h1>New comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </p>
	<%= f.hidden_field :work_item_id, :value => @work_item.id %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to back_image_tag(:large), @comment.work_item %>
