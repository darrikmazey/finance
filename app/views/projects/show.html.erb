<%= render :partial => 'project_data', :object => @project %>

<%= admin_account_group_link_to edit_image_tag(:large), edit_project_path(@project) %>
<%= link_to back_image_tag(:large), projects_path %>

<% if @admins && @admins.size > 0 -%>
<%= render :partial => 'projects/user_list', :object => @admins, :locals => { :title => 'admins', :project => @project } %>
<% end -%>

<% if @workers && @workers.size > 0 -%>
<%= render :partial => 'projects/user_list', :object => @workers, :locals => { :title => 'workers', :project => @project, :show_controls => @user_options.admin_account_group? } %>
<% end -%>

<% if @loose_work_items.size > 0 -%>
<%= render :partial => 'work_items/work_item_list', :object => @loose_work_items %>
<% end -%>

<% if admin_account_group? %>
  <% if @project.invoices.size > 0 -%>
  <%= render :partial => 'invoices/invoice_list', :object => @project.invoices %>
  <% end -%>

<% end %>
