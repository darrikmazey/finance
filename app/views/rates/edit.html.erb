<h1><%= @rate.new_record? ? 'New' : 'Editing' -%> Rate</h1>

<% form_builder_for(@rate) do |f| %>
  <%= f.text_field :name %>
  <%= f.collection_select :project_id, @current_user.projects, :id, :name %>
  <%= f.text_field :modifier %>
  <%= f.submit 'Update' %>
<% end %>

<%= link_to 'Back', rates_path %>
