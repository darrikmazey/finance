<h1>New rate</h1>

<% form_for(@rate) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :project %><br />
    <%= f.collection_select :project_id, @current_user.projects, :id, :name %>
  </p>
  <p>
    <%= f.label :modifier %><br />
    <%= f.text_field :modifier, :value => '1.00' %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', rates_path %>
